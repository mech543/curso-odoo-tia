<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id = "modulo_pruebas.reporte_pedido_detalle_canc">
            <t t-call = "web.html_container">
                <t t-set = "cocina" t-value = "0" />
                <t t-set = "repartidor" t-value = "0" />
                <t t-call = "web.external_layout">
                    <div class = "page">

                        <h2>Pedidos Perdidos </h2>
                        <table class = "table table table-striped table-bordered">
                            <thead class = "thead-dark">
                                <th scope = "col">Numero</th>
                                <th scope = "col" colspan = "2">Cliente</th>
                                <th scope = "col">Estado</th>
                                <th scope = "col">Detalle</th>
                            </thead>
                            <t t-foreach = "docs" t-as = "pedido">
                                <t t-if = "pedido.estado.orden == '0'">
                                    <tbody>
                                        <td><t t-raw = "pedido.numero" /></td>
                                        <td><t t-raw = "pedido.cliente.name" /></td>
                                        <td style = "vertical-aling:middle">
                                            <img t-attf-src = "data:image/*;base64,{{pedido.cliente.image_128}}"
                                                 style = "width:auto; height:60px;" />
                                        </td>
                                        <td><t t-raw = "pedido.estado.nombre" /></td>

                                        <td style = "text-align:center">
                                            <table class = "table table-info table-sm">
                                                <thead class = "thead-dark">
                                                    <th scope = "col">Cantidad</th>
                                                    <th scope = "col">Receta</th>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach = "pedido.detalle" t-as = "detalle">
                                                        <tr>
                                                            <td><t t-raw = "detalle.cantidad" /></td>
                                                            <td><t t-raw = "detalle.receta.nombre" /></td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <td scope = "col">Total:</td>
                                                        <td style = "text-align:right">
                                                            $<t t-raw = "pedido.total" />
                                                        </td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </td>
                                    </tbody>
                                </t>
                            </t>
                        </table>

                    </div>

                    <t t-foreach = "docs" t-as = "ped">
                        <t t-if = "ped.estado.orden in ['1','2']">
                            <t t-set = "cocina" t-value = "cocina + 1 " />
                        </t>
                        <t t-if = "ped.estado.orden in ['3','4']">
                            <t t-set = "repartidor" t-value = "repartidor + 1 " />
                        </t>
                    </t>


                    <div class = "page">
                        <h1>
                            Problemas con Cocina : <span t-raw = "cocina" />
                        </h1>
                        <h1>
                            Problemas con Repartidor : <span t-raw = "repartidor" />
                        </h1>
                    </div>

                </t>
            </t>
            <span  t-esc="modulo_pruebas.pedido.fin_turno()"/>
        </template>
    </data>
</odoo>